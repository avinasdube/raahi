{
  "name": "raahi",
  "private": true,
  "version": "1.0.0",
  "description": "Raahi monorepo: React client + Node/Express server",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev:client",
    "dev:client": "npm run dev --workspace client",
    "dev:server": "npm run start --workspace server",
    "start-server": "npm run start --workspace server",
    "install-server": "npm install --workspace server",
    "install-client": "npm install --workspace client",
    "build-client": "npm run build --workspace client",
    "start-client": "npm run dev --workspace client",
    "seed": "npm:seed --workspace server",
    "export:csv": "npm:export:csv --workspace server",
    "build": "npm:build --workspace client",
    "preview": "npm:preview --workspace client"
  }
}
